{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "esnext",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "noEmit": true,
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ],
        "paths": {}
    }
}
